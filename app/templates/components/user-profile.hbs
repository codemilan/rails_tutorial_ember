<section class="user_info">
  <h1>
    {{gravatar-image email=model.user.email alt=model.user.name size=80 class='gravatar'}}
    {{model.user.name}}
  </h1>
</section>

<section class="stats">
  <div class="stats">
    {{#link-to 'user.following' model.user}}
      <strong id="following" class="stat">
        {{model.userFollowing.meta.total-count}}
      </strong>
      following
    {{/link-to}}

    {{#link-to 'user.followers' model.user}}
      <strong id="followers" class="stat">
        {{model.userFollowers.meta.total-count}}
      </strong>
      followers
    {{/link-to}}
  </div>
  <div class="user_avatars">
    {{#each gravatarUsers as |follower|}}
      {{#link-to 'user.index' follower.id}}
        {{gravatar-image email=follower.email alt=follower.name size=30 class='gravatar'}}
      {{/link-to}}
    {{/each}}
  </div>
</section>
